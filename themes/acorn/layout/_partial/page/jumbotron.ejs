<div class="jumbotron mb-5">
  <div class="video">
    <% if (theme.video.overlay) { %>
      <div class="video-frame">
        <img src="<%- theme.video.path %>overlay-hero.svg" alt="Decorative image frame">
      </div>
    <% } %>
    <div class="video-media">
      <video playsinline loop muted data-autoplay autoplay
             poster="<%- theme.video.path %>meri_snow_mountain.png" x5-video-player-type="h5">
        <source src="<%- theme.video.path %>meri_snow_mountain.mp4" type="video/mp4">
        <source src="<%- theme.video.path %>meri_snow_mountain.ogv" type="video/ogg">
        <source src="<%- theme.video.path %>meri_snow_mountain.webm" type="video/webm">
        <p>Your user agent does not support the HTML5 Video element.</p>
      </video>
      <article>
        <div class="article-inset">
          <h2 class="h1"><%- theme.slogan.primary %></h2>
          <p class="font-w-lighter"><%- theme.slogan.secondary %></p>
        </div>
      </article>
    </div>
    <div class="learn-more">
      <a class="anchor" href="#landingpage">
        <img id="landingpage" src="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='white' viewBox='0 0 16 16'><path d='M8 3a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 3zm4 8a4 4 0 0 1-8 0V5a4 4 0 1 1 8 0v6zM8 0a5 5 0 0 0-5 5v6a5 5 0 0 0 10 0V5a5 5 0 0 0-5-5z'/></svg>" alt="">
      </a>
    </div>
  </div>
</div>