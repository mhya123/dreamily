<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <%
  var title = page.title;
  if (is_archive()) {
    title = __('archive_a');
    if (is_month()) {
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()) {
      title += ': ' + page.year;
    }
  } else if (is_category()) {
    title = __('categories.ejs') + ': ' + page.categories;
  } else if (is_tag()) {
    title = __('tag') + ': ' + page.tag;
  }
  %>
  <% if (page.keywords){ %>
    <meta name="keywords" content="<%= page.keywords %>,<%= config.keywords %>">
  <% } else if (config.keywords){ %>
    <meta name="keywords" content="<%= config.keywords %>">
  <% } %>
  <% if (page.description){ %>
    <meta name="description" content="<%= page.description %>">
  <% } else if (config.description){ %>
    <meta name="description" content="<%= config.description %>">
  <% } %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <title><% if (title){ %><%= title %> | <% } %> <%= config.title %></title>
  <% if (theme.webclip){ %>
    <link rel="apple-touch-icon" sizes="57x57" href="<%- theme.webclip %>/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="<%- theme.webclip %>/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="<%- theme.webclip %>/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="<%- theme.webclip %>/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="<%- theme.webclip %>/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="<%- theme.webclip %>/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="<%- theme.webclip %>/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="<%- theme.webclip %>/apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="<%- theme.webclip %>/apple-touch-icon-167x167.png">
  <% } %>
  <% if (theme.favicon){ %>
    <link rel="shortcut icon" href="<%- theme.favicon %>">
  <% } %>
  <% if (theme.swiper.enable){ %>
    <link rel="stylesheet" href="<%- url_for(theme.libs.swiper.css) %>"/>
  <% } %>
  <%- css('css/style') %>
</head>
